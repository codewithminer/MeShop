<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:layout_gravity="center_horizontal"
    android:elevation="6dp"
    android:layout_marginStart="12dp"
    style="@style/card_product"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_prev_product_design"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="fitXY"
            android:src="@drawable/black"/>


        <TextView
            android:id="@+id/tv_prev_product_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:text="product name"
            android:textSize="14sp"
            android:textColor="#222222"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="6dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/tv_prev_product_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="shop name"
            android:textSize="14sp"
            android:textColor="#222222"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/tv_prev_product_shop_city"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="city"
            android:textSize="13sp"
            android:textColor="#222222"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#2196F3"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_prev_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"
                android:layout_marginStart="7dp"/>

            <TextView
                android:id="@+id/tv_prev_product_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="old price"
                android:textSize="14sp"
                android:textColor="#E3E3E3"
                android:layout_marginStart="7dp"
                android:background="@drawable/strike_through_shape"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>